<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Profile</h1>

    <h2>My Listings</h2>
    <% listingsOwned.forEach(listing => { %>
      <div class="single-listing">
        <h3>A Listing in <%= listing.city %></h3>
        <a href="/listings/<%=listing._id%>">
          View more details
        </a>
      </div>
    <% }) %>

    <h2>My Favorites</h2>
    <% listingsFavorited.forEach(listing => { %>
      <div class="single-listing">
        <h3>A Listing in <%= listing.city %></h3>
        <a href="/listings/<%=listing._id%>">
          View more details
        </a>
      </div>
    <% }) %>
  </body>
</html>
